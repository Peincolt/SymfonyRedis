{% extends 'base.html.twig' %}
{% block body %}
{% if total_visit is empty and user_stats is empty %}
<h1>Aucune statistique disponible pour le moment</h1>
{% else %}
{% if total_visit is not empty %}
<div class="stat-card-total">
    <div class="stat-title">Nombre total d'utilisateurs ces dernières 24h00</div>
    <div class="stat-value">{{total_visit}}</div>
</div>
<br/>
{% endif %}
{% if user_stats is not empty %}
<h1>Statistiques concernant votre compte</h1>
<div class="stat-cards-group">
    <div class="stat-card">
        <div class="stat-title">Vous avez visionné : </div>
        <div class="stat-value">{{user_stats[0]}}</div>
        <div class="stat-title">page(s)</div>
    </div>

    <div class="stat-card">
        <div class="stat-title">Dernière page visitée</div>
        <div class="stat-value">{{user_stats[2]}}</div>
    </div>

    <div class="stat-card">
        <div class="stat-title">Date de dernière visite</div>
        <div class="stat-value">{{user_stats[1]|date('m/d/Y')}} à {{user_stats[1]|date('H:i')}}</div>
    </div>
</div>
{% endif %}
{% endif %}
{% endblock %}